div.container
  div.col-md-12
    /h1 Bootstrap 3 Thumbnail Slider
    div.well
      #myCarousel.carousel.slide
        /! Carousel items
        .carousel-inner
          - @groups.each_with_index do |group, i|
            div.item
              a href="#{group_path(group)}" 
                div.col-md-3
                  p
                    = @groups[i-1].name
                div.col-md-3
                  = image_tag group.photo.url(:thumb), class: 'img-rounded' if group.photo?
                div.col-md-3  
                  h4
                    = group.name
                  p  
                    = group.description
                  p
                    = "#{i+1}/#{@groups.size}"

                  = link_to 'Edit', edit_group_path(group), class: 'btn btn-default' if user_signed_in?
                  
                  = link_to 'Delete', group_path(group), method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger' if user_signed_in?
                      
                div.col-md-3
                  p
                    = @groups[next_element(i)].name 
               
        a.left.carousel-control data-slide="prev" href="#myCarousel"  ‹
        a.right.carousel-control data-slide="next" href="#myCarousel"  ›         
                

