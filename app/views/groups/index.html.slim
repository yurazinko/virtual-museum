div.container
  div.col-md-12
    h1 Bootstrap 3 Thumbnail Slider
    div.well
      #myCarousel.carousel.slide
        /! Carousel items
        .carousel-inner
          - @groups.each do |group|
            div.item
              a href="#{group_path(group)}" 
                = image_tag group.photo.url(:thumb) if group.photo?
                h4
                  = group.name
                p  
                  = group.description
                = link_to 'Edit', edit_group_path(group), class: 'btn btn-default' 
                = link_to 'Delete', group_path(group), method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger'  
        a.left.carousel-control data-slide="prev" href="#myCarousel"  ‹
        a.right.carousel-control data-slide="next" href="#myCarousel"  ›         
                

javascript:

  $(document).ready(function() {
    $('.item:first').addClass('active');
    $('#myCarousel').carousel({
    interval: 2000
    })
      
      $('#myCarousel').on('slid.bs.carousel', function() {
        //alert("slid");
    });
  });

  $('.item').click(function(){
    $('.item').removeClass('active');
  });
